{
    "name": "lot2k/php-buildskip",
    "description": "Being an incremental build utility",
    "bin": "bin/buildskip",
    "license": "BSD-3-Clause",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Lot2k\\": "src/"
        }
    },
    "authors": [
        {
            "name": "cjw6k",
            "email": "chris@lot2k.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "a6a/fromdir": "^0.2.0",
        "cjw6k/chapeau": "^1.1",
        "level-2/dice": "^4.0",
        "nunomaduro/collision": "^6.2",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "a6a/coding-standards": "^0.1.4",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.26"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true
    },
    "scripts": {
        "phpcs": [
            "vendor/bin/phpcs --standard=phpcs.xml bin bootstrap config src tests"
        ],
        "psalm": [
            "vendor/bin/psalm -c psalm.xml"
        ],
        "qa" : [
            "@phpcs",
            "@psalm"
        ]
    }
}
